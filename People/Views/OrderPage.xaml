<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="People.Views.OrderPage"
             Background="Red">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor='Red' CornerRadius="0">
                <Label Text="Ordering App" HorizontalTextAlignment="Center" FontFamily="Bold" TextColor="White" FontSize="36"/>
            </Frame>
            <Frame BackgroundColor="BlanchedAlmond" Margin="20,0,20,0" CornerRadius="10">
                <StackLayout>
                    <Entry x:Name="newPerson"
                        Placeholder="Enter Name" Margin="50,0,50,0" />
                    <Entry x:Name="newGender"
                        Placeholder="Enter Gender" Margin="50,0,50,0" />

                    <Entry x:Name="newTShirtSize"
                        Placeholder="Enter T-Shirt Size" Margin="50,0,50,0"/>

                    <Entry x:Name="newDateOfOrder"  
                        Placeholder="Enter Date of Order" Margin="50,0,50,0" />

                    <Entry x:Name="newTShirt_Color"
                        Placeholder="Enter T-Shirt Color" Margin="50,0,50,0" />

                    <Entry x:Name="newShipping_Address"
                        Placeholder="Enter Shipping Address" Margin="50,0,50,0" />
                </StackLayout>
            </Frame>
            
            
                <Button Text="Add Order"
           Clicked="OnNewButtonClicked" CornerRadius="50" BackgroundColor="Crimson" TextColor="White" Padding="25" Margin="120,0,120,0" BorderWidth="2" BorderColor="LightBlue"/>
            

            
                <Button Text="Get All Orders"
           Clicked="OnGetButtonClicked" CornerRadius="50" BackgroundColor="Crimson" TextColor="White" Padding="25" Margin="120,-7,120,0" BorderWidth="2" BorderColor="LightBlue"/>
           
            

            <ListView x:Name="orderList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="30">
                            <StackLayout Padding="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Label Text="{Binding Name}" Grid.Row="0" Grid.Column="0" />
                                    <Label Text="{Binding Gender}" Grid.Row="0" Grid.Column="1"/>
                                    <Label Text="{Binding TShirt_Size}" Grid.Row="0" Grid.Column="2"/>
                                    <Label Text="{Binding Date_of_Order}" Grid.Row="0" Grid.Column="3"/>
                                    <Label Text="{Binding TShirt_Color}" Grid.Row="0" Grid.Column="4"/>
                                    <Label Text="{Binding Shipping_Address}" Grid.Row="0" Grid.Column="5"/>
                                </Grid>

                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="statusMessage"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>